{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/auth/(.*)",
      "dest": "/api/auth/$1"
    },
    {
      "src": "/api/products/(.*)",
      "dest": "/api/products/$1"
    },
    {
      "src": "/api/attributes/(.*)",
      "dest": "/api/attributes/$1"
    },
    {
      "src": "/api/upload/(.*)",
      "dest": "/api/upload/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/static/(.*)",
      "dest": "/client/build/static/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/client/build/favicon.ico"
    },
    {
      "src": "/manifest.json",
      "dest": "/client/build/manifest.json"
    },
    {
      "src": "/(.*)",
      "dest": "/client/build/index.html"
    }
  ],
  "env": {
    "MONGODB_URI": "MONGODB_URI",
    "JWT_SECRET": "JWT_SECRET",
    "JWT_EXPIRE": "JWT_EXPIRE"
  },
  "functions": {
    "api/**/*.js": {
      "maxDuration": 30
    }
  }
}